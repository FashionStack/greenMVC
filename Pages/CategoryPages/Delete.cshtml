@page
@model GreenMVC.Pages.CategoryPages.DeleteModel

@{
    ViewData["Title"] = "Remover Categoria";
}
<div class="title-pages">
    @ViewData["title"]
</div>
<div class="row">
    <div class="col-md-6">
        <div class="category-create">
            <div class="row">
                <div class="col-md-12 form-group">
                    <span class="control-label">Confirma a exclusão dessa categoria?</span>
                </div>
            </div>
            <div class="form-group">
                <h3 class="linha-form">@Html.DisplayFor(model => model.Category.Name)</h3>
            </div>
            <div>
                <div class="generic-btn-box" style="align-items:end;">
                    <a class="btn btn-generic m-0"
                       asp-page="./Index">
                        <span class="material-icons">arrow_back</span>
                        <span class="back">Voltar</span>
                    </a>
                    <form method="post">
                        <input type="hidden" asp-for="Category.CategoryId" />
                        <button type="submit" value="Delete" class="btn btn-danger delete m-0" style="align-items:center;" />
                        <span class="material-icons">delete</span>Excluir
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>