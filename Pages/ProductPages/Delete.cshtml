@page
@model GreenMVC.Pages.ProductPages.DeleteModel

@{
    ViewData["Title"] = "Deletar Produto";
}

<div class="title-pages">
    @ViewData["title"]
</div>
<div class="row">
    <div class="col-md-6 col-lg-6">
        <div class="card-create">
            <div class="row">
                <div class="col-md-12 form-group">
                    <span class="control-label">Confirma a exclusão desse item?</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <h3 id="name" name="name">@Html.DisplayFor(model => Model.Product.Name)</h3>
                </div>
            </div>
            <div class="generic-btn-box">
                <a class="btn btn-generic m-0"
                   asp-page="./Index"><span class="material-icons">arrow_back</span><span class="back">Voltar</span></a>
                <form method="post">
                    <input type="hidden" asp-for="Product.ProductId" />
                    <button type="submit" value="Delete" class="btn btn-danger delete m-0" style="align-items:center;" />
                    <span class="material-icons">delete</span>Excluir
                </form>
            </div>
        </div>
    </div>
</div>