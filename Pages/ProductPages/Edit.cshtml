@page
@model GreenMVC.Pages.ProductPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Produto</h4>
<hr />
<div class="row">
    <div class="col-md-12 col-lg-9">
        <div class="card-create">
            <form method="post">
                <div class="row">
                    <input type="hidden" asp-for="Product.ProductId" />
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Product.Name" for="name" class="control-label">Nome </label>
                            <input asp-for="Product.Name" type="text" class="form-control" id="name" name="name" maxlength="100">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div>
                            <label for="sustainable" class="control-label">Material Sustentável </label>
                            <div>
                                <input class="apple-switch" type="checkbox" id="sustainable" name="sustainable" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 category">
                        <div class="form-group">
                            <label for="listbox1" class="control-label" aria-label="Selecione a categoria">Categoria </label>
                            <select class="category" id="listbox1" name="category">
                                <option aria-selected="true" value="">Selecione</option>
                                @foreach (var item in Model.Categories)
                                {
                                    <option aria-selected="false" selected="@(item.CategoryId == Model.Product.Category.CategoryId ? "selected" : "false")" value="@item.CategoryId">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Product.Size" for="size" class="control-label">Tamanho </label>
                    <select class="size" id="size" name="size">
                        <option aria-selected="true" default value="@Html.DisplayFor(model => Model.Product.Size)">@Html.DisplayFor(model => Model.Product.Size)</option>
                        <option value="PP">PP</option>
                        <option value="P">P</option>
                        <option value="M">M</option>
                        <option value="G">G</option>
                        <option value="GG">GG</option>
                        <option value="GG1">GG1</option>
                        <option value="GG2">GG2</option>
                        <option value="GG3">GG3</option>
                        <option value="0-3M">0 a 3 meses</option>
                        <option value="4-7M">4 a 7 meses</option>
                        <option value="8-12M">8 a 12 meses</option>
                        <option value="1">1 ano</option>
                        <option value="2">2 anos</option>
                        <option value="3">3 anos</option>
                        <option value="4">4 anos</option>
                        <option value="5">5 anos</option>
                        <option value="6">6 anos</option>
                        <option value="7">7 anos</option>
                        <option value="8">8 anos</option>
                        <option value="9">9 anos</option>
                        <option value="10">10 anos</option>
                        <option value="12">12 anos</option>
                        <option value="14">14 anos</option>
                        <option value="16">16 anos</option>
                        <option value="34">34</option>
                        <option value="36">36</option>
                        <option value="38">38</option>
                        <option value="40">40</option>
                        <option value="42">42</option>
                        <option value="44">44</option>
                        <option value="46">46</option>
                    </select>
                    <!--<input asp-for="Product.Size" type="text" class="form-control" id="size" name="size" maxlength="5" required>-->
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Product.Amount" for="amount" class="control-label">Quantidade </label>
                    <input asp-for="Product.Amount" type="text" class="form-control" id="amount" name="amount" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Product.ReferenceCode" for="referenceCode" class="control-label">REF </label>
                    <input asp-for="Product.ReferenceCode" type="text" class="form-control" id="referenceCode" name="referenceCode" maxlength="50" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Product.SKU" for="sku" class="control-label">SKU </label>
                    <input asp-for="Product.SKU" type="text" class="form-control" id="sku" name="sku" maxlength="50" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Product.ImageUrl" for="imageUrl" class="control-label">URL da Imagem </label>
                    <input asp-for="Product.ImageUrl" type="text" class="form-control" id="imageUrl" name="imageUrl" maxlength="250">
                </div>
            </div>
        </div>
        <div class="generic-btn-box">
            <a class="btn btn-generic m-0"
               asp-page="/ProductPages/Details"
               asp-route-id="@Model.Product.ProductId"><span class="material-icons">arrow_back</span>
               <span class="back">Voltar</span>
            </a>
            <button class="btn-save m-0" type="submit" aria-label="salvar"><span class="material-icons">save</span>Salvar</button>
        </div>
        </form>
    </div>
    </div>
    <div class="col-md-12 col-lg-3">
        <div class="product-img">
            <img id="product-image" src="@Model.Product.ImageUrl" onerror="adjustImage()" aria-label="Imagem do produto">
            <span id="tagImage" class="material-icons">sell</span>
        </div>
    </div>
</div>

<script>
    function adjustImage() {
        $("#product-image").hide();
        $("#tagImage").show();
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
